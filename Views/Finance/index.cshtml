                    $('#electric_units').val(units);
                    // คำนวณค่าไฟ (ตัวอย่าง: หน่วยละ 5 บาท)
                    const bill = units * 5;
                    $('#electric_bill').val(bill);
                } else {
                    $('#electric_units').val(0);
                    $('#electric_bill').val(0);
                }
            }

