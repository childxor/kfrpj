            // คำนวณค่าน้ำอัตโนมัติ
            function calculateWaterBill() {
                const oldMeter = parseInt($('#old_meter').val()) || 0;
                const newMeter = parseInt($('#new_meter').val()) || 0;
                const units = newMeter - oldMeter;

                if (units >= 0) {
                    $('#water_units').val(units);
                    // คำนวณค่าน้ำ (ตัวอย่าง: หน่วยละ 15 บาท)
                    const bill = units * 15;
                    $('#water_bill').val(bill);
                } else {
                    $('#water_units').val(0);
                    $('#water_bill').val(0);
                }
            }

            // คำนวณค่าไฟอัตโนมัติ
